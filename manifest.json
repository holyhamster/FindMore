{
  "manifest_version": 3,
  "name": "FindMore",
  "description": "Persistent search panels to help your research.",
  "version": "1.0",
  "permissions": [ "activeTab", "scripting", "storage" ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "16.png"
  },

  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>", "*://*/*" ],
      "all_frames": false,
      "js": [ "src/js/content-import.js" ],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [ "src/js/*" ],
      "matches": [ "<all_urls>" ]
    }
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+F",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "opens search popup"
    },
    "fm-hotkey-new-search": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Opens new search pannel"
    },
    "fm-hotkey-save-search": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Y"
      },
      "description": "Saves search panels on active page"
    },
    "fm-hotkey-load-search": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Loads search panels to active pagae"
    }
  }
}